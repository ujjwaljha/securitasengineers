@model IEnumerable<SecuritasEngineering.Web.Models.Product>

@{
    ViewBag.Title = "ProductCategory";
}

<h2>@ViewBag.Category</h2>

<div class="row">
    <hr />
    @foreach (var item in @Model)
    {

        <div class="col-md-3 col-sm-4 col-sm-6">
            <div class="card">
                <a href="/product/@item.ID">
                    <img src="@item.ImageURL" alt="Categories" style="width:100%" />
                </a>

                <a href="/product/@item.ID">
                    <div class="productName">
                        <h6><b>@item.Name</b></h6>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
